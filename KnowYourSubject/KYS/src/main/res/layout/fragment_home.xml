<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.project.android.app.kys.view.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/frag_home_cv_major_list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="1dp"
                android:background="@color/ColorWhite"
                android:elevation="1dp">

                <include
                    layout="@layout/fragment_home_major_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/frag_home_cv_all_feedbacks"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="1dp"
                android:background="@color/ColorWhite"
                android:elevation="1dp">

                <include
                    layout="@layout/fragment_home_feedback_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </com.project.android.app.kys.view.VerticalScrollView>

</LinearLayout>