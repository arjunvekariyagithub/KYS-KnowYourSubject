<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fcor_tv_overall_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3.5"
            android:textColor="@color/ColorBlack"
            android:textSize="40dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/fcor_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="70" />

            <TextView
                android:id="@+id/fcor_feedback_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fcor_indicator_rating_5"
                android:layout_width="100dp"
                android:layout_height="11dp"
                android:background="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/fcor_indicator_rating_4"
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:background="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/fcor_indicator_rating_3"
                android:layout_width="70dp"
                android:layout_height="11dp"
                android:background="#ffff00" />

            <TextView
                android:id="@+id/fcor_indicator_rating_2"
                android:layout_width="70dp"
                android:layout_height="11dp"
                android:background="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/fcor_indicator_rating_1"
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:background="@android:color/holo_orange_dark" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
